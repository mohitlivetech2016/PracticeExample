<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mohit.practiceexample">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" />

        <!-- Main activity for intent -->
        <activity
            android:name=".intents.IntentMain"
            android:label="@string/title_activity_intent_main"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            </activity>
        <activity
            android:name=".intents.IntentSecondActivity"
            android:label="@string/title_activity_intent_second"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- Main activity for Factory Methods -->

        <activity
            android:name=".factorymethod.MainActivityOfFactoryMethod"
            android:label="@string/title_activity_main_of_factory_method"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".BroadcastReciver.BatteryIndicatorActivity"
            android:label="@string/title_activity_battery_indicator"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name=".intents.ShowResult"
            android:label="@string/title_activity_show_result"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>