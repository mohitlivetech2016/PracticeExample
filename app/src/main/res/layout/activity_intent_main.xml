<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.example.mohit.practiceexample.intents.IntentMain">



    <Button

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100sp"
        android:id="@+id/id_Btn_CallImplicitIntent"
        android:text="Call ImplicitIntent"
        />

    <Button

        android:layout_marginTop="30sp"
        android:text="CallExplicitIntent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/id_Btn_CallExplicitIntent"

        />



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter text to pass Data to other activity"
        android:id="@+id/id_Et_PassValue"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70sp"
        android:text="Click here to Pass Data"
        android:id="@+id/id_Btn_SubmitData"
        />

</LinearLayout>
